partial default xkb_types "default" {
    
    # there are some key combinations with the Super key on Mac keyboards
    # (e.g. cmd+C for Copy or cmd+v for Paste)
    type "FIVE_LEVEL_SEMIALPHABETIC_SUPER" {
        modifiers= Shift+Lock+LevelThree+Mod4;
        map[Shift]= Level2;
        map[Lock]= Level2;
        map[LevelThree]= Level3;
        map[Shift+LevelThree]= Level4;
        map[Lock+LevelThree]= Level3;
        preserve[Lock+LevelThree]= Lock;
        map[Shift+Lock+LevelThree]= Level4;
        preserve[Shift+Lock+LevelThree]= Lock;
        map[Mod4]= Level5;
        map[Shift+Mod4]= Level5;
        map[Lock+Mod4]= Level5;
        map[LevelThree+Mod4]= Level5;
        map[Shift+LevelThree+Mod4]= Level5;
        map[Lock+LevelThree+Mod4]= Level5;
        map[Shift+Lock+LevelThree+Mod4]= Level5;
        level_name[Level1]= "Base";
        level_name[Level2]= "Shift";
        level_name[Level3]= "Alt Base";
        level_name[Level4]= "Shift Alt";
        level_name[Level5]= "With Super";
    };

    # there are some key combinations with the left alt key on Mac keyboards
    # (e.g. lalt+5 for "[" or lalt+6 for "]")
    type "FIVE_LEVEL_SEMIALPHABETIC_ALT" {
        modifiers= Shift+Lock+LevelThree+Alt;
        map[Shift]= Level2;
        map[Lock]= Level2;
        map[LevelThree]= Level3;
        map[Shift+LevelThree]= Level4;
        map[Lock+LevelThree]= Level3;
        preserve[Lock+LevelThree]= Lock;
        map[Shift+Lock+LevelThree]= Level4;
        preserve[Shift+Lock+LevelThree]= Lock;
        map[Alt]= Level5;
        map[Shift+Alt]= Level5;
        map[Lock+Alt]= Level5;
        map[LevelThree+Alt]= Level5;
        map[Shift+LevelThree+Alt]= Level5;
        map[Lock+LevelThree+Alt]= Level5;
        map[Shift+Lock+LevelThree+Alt]= Level5;
        level_name[Level1]= "Base";
        level_name[Level2]= "Shift";
        level_name[Level3]= "Alt Base";
        level_name[Level4]= "Shift Alt";
        level_name[Level5]= "With left Alt";
    };
};
